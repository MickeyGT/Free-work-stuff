using namespace std;
long long i, j, k, ok, nr, n, m, el, min1, max1, x, y, a, b;
int main()
{
	//ifstream f("file.in");
	//ofstream g("file.out");
	cin >> k;
	while (1)
	{
		n++;
		bitset<40>numb(n);
		ok = 1;
		for (i = 0; i <= 34; i++)
			if (numb[i] == 1 && numb[i + 1] == 1)
			{
				ok = 0;
				break;
			}
		if (ok)
		{
			nr++;
			if (nr == k)
			{
				cout << n;
				return 0;
			}
		}
	}
	return 0;
}
