#include<fstream>
#include<string.h>
#include<ctype.h>
#include<iostream>
#include<algorithm>
#include<map>
#include<unordered_map>
#include<array>
#include<deque>
#include<unordered_set>
using namespace std;
vector <int> v[7501];
vector <int> ::iterator it;
deque <int> deq;
deque <int> ::iterator iter;
int n, m, in, sf, i, start, finish, rez, nr, j, el, x = 1,fr[7501];
bool viz[7501];
void finddist()
{
	deq.push_back(in);
	nr = 1;
	while (deq.size() != 0)
	{
		m = deq.size();
		for (i = 1; i <= m; i++)
		{
			el = *deq.begin();
			deq.pop_front();
			if (viz[el] == 0)
			{
				for (it = v[el].begin(); it != v[el].end(); it++)
				{
					if (*it == sf&&rez == 0)
					{
						rez = nr;
						return;
					}
					deq.push_back(*it);
				}
				viz[el] = 1;
			}
		}
		nr++;
	}
}
int main()
{
	ifstream f("file.in");
	ofstream g("file.out");
	f >> n >> m >> in>>sf;
	for (i = 1; i <= m; i++)
	{
		f >> start >> finish;
		v[start].push_back(finish);
	}
	finddist();
	g << rez<<" ";
	return 0;
}
