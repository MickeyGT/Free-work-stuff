#include<stdlib.h>
#include<stdio.h>
#include<fstream>
#include<string>
#include<vector>
#include<iostream>
#include<math.h>
#include<algorithm>
#include<map>
using namespace std;
int n, i, j, l, p, nr, k;
map <string, int> st;
map <string, int> ::iterator it;
char min1;
string v, x[100010];
int main()
{
	cin >> n;
	for (k = 1; k <= n; k++)
	{
		cin >> v;
		x[k] = v;
		l = v.size();
		min1 = 'z';
		for (i = 0; i <= l - 1; i++)
		{
			if (v[i] < min1)
				min1 = v[i];
		}
		for (i = 0; i <= l - 1; i++)
		{
			v[i] = v[i] - min1 + 'a';
		}
		it = st.find(v);
		if (it == st.end())
			st.insert(make_pair(v, 1));
		else
			it->second++;
	}
	for (k = 1; k <= n; k++)
	{
		v = x[k];
		l = v.size();
		min1 = 'z';
		for (i = 0; i <= l - 1; i++)
		{
			if (v[i] < min1)
				min1 = v[i];
		}
		for (i = 0; i <= l - 1; i++)
		{
			v[i] = v[i] - min1 + 'a';
		}
		it = st.find(v);
		if (it != st.end())
		{
			if (it->second > 1)
				cout << 1 << endl;
			else
				cout << 0 << endl;
		}
		else
			cout << 0 << endl;
	}

	return 0;
}
